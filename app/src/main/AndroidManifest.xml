<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.intektor.kentai">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KentaiClient"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OverviewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_activity_register">
        </activity>

        <service android:name=".kentai.firebase.FMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".kentai.firebase.FIIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name=".AddContactActivity"
            android:parentActivityName=".OverviewActivity">
        </activity>
        <activity
            android:name=".NewChatActivity"
            android:parentActivityName=".OverviewActivity">
        </activity>
        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".OverviewActivity">
        </activity>

        <receiver android:name=".kentai.firebase.DisplayNotificationReceiver" android:exported="true">
            <intent-filter>
                <action android:name="de.intektor.kentai.chatNotification"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>