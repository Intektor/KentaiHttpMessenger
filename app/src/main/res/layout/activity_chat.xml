<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatActivityParentLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="end"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatActivityMessageList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chatActivityButtonTakePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/chatbubble">

    </android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/chatActivitySendMessage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_send_white_24dp" />

    <Button
        android:id="@+id/chatActivityButtonTakePicture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:text="ðŸ“·"
        app:layout_constraintBottom_toTopOf="@+id/chatActivityTextInput"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/chatActivityButtonPickMedia"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_perm_media_white_24dp"
        app:layout_constraintBottom_toTopOf="@+id/chatActivityTextInput"
        app:layout_constraintStart_toEndOf="@+id/chatActivityButtonTakePicture" />

    <Button
        android:id="@+id/chatActivityButtonRecordVoice"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="ðŸŽ¤"
        app:layout_constraintBottom_toTopOf="@+id/chatActivityTextInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.intektor.kentai.kentai.chat.RichEditText
        android:id="@+id/chatActivityTextInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/chat_activity_write_message"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chatActivitySendMessage"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatActivityViewingUsersList"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/chatActivityMessageList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/chatActivityRecordingLayout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chatActivityMessageList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chatActivityRecordingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>